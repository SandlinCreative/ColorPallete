<Window x:Class="BasicCanvasControlTesting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicCanvasControlTesting"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        
        <Canvas x:Name="TheCanvas" MouseMove="Canvas_MouseMove" Background="Transparent">
            
        </Canvas>

        <StatusBar Grid.Row="1">
            <StatusBarItem>
                <Label Content="X:" Padding="0"></Label>
            </StatusBarItem>
            <StatusBarItem>
                <Label x:Name="LabelX" Content="" Padding="0"></Label>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <Label Content="Y:" Padding="0"></Label>
            </StatusBarItem>
            <StatusBarItem>
                <Label x:Name="LabelY" Content="" Padding="0"></Label>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
