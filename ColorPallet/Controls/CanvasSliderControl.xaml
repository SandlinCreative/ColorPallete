<UserControl x:Class="ColorPallete.CanvasSliderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColorPallete"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="350">
    <Canvas x:Name="TheCanvas" PreviewMouseMove="TheCanvas_PreviewMouseMove" PreviewMouseUp="TheCanvas_PreviewMouseUp">
        <Ellipse x:Name="DragPuck" Height="20" Width="20" PreviewMouseDown="DragPuck_PreviewMouseDown" IsManipulationEnabled="True" Canvas.Left="20" Canvas.Top="20" Fill="#02000000" Stroke="Black" StrokeThickness="3"/>
    </Canvas>
</UserControl>
