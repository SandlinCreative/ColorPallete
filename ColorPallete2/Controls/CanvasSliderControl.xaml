<UserControl x:Class="ColorPallete2.CanvasSliderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColorPallete2"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="350">
    <UserControl.DataContext>
        <local:ViewModel/>
    </UserControl.DataContext>
    <Grid Height="200">
        <Canvas>
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#00000000" Offset="0"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Canvas.Background>
        </Canvas>
        <Canvas x:Name="TheCanvas" PreviewMouseMove="TheCanvas_PreviewMouseMove" PreviewMouseUp="TheCanvas_PreviewMouseUp">
            <Ellipse x:Name="DragPuck" Height="20" Width="20" PreviewMouseDown="DragPuck_PreviewMouseDown" IsManipulationEnabled="True" Canvas.Left="20" Canvas.Top="20" Fill="#02000000" Stroke="Black" StrokeThickness="3"/>
        </Canvas>
    </Grid>
</UserControl>
